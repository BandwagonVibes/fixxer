# PhotoSort v7.0 Configuration File
# Location: ~/.photosort.conf
#
# This file stores your default settings so you don't have to type them every time.
# All settings are optional - the tool will use built-in defaults if this file doesn't exist.

[ingest]
# Where to store your renamed and organized photos
# Use full paths with ~ for home directory
default_destination = ~/Library/Mobile Documents/com~apple~CloudDocs/negatives

# Which Ollama vision model to use for AI naming
# Must be installed: ollama pull bakllava
default_model = bakllava

[cull]
# Technical quality thresholds (calibrated for Lumix .RW2 files)
# Adjust these if your camera produces different sharpness scores

# Images with sharpness > this go to "_Keepers"
sharpness_good = 40.0

# Images with sharpness < this go to "_Review_Duds"
sharpness_dud = 15.0

# Images with >20% blown highlights or crushed blacks = dud
exposure_dud_pct = 0.20

# Images with <5% clipped pixels = good exposure
exposure_good_pct = 0.05

[burst]
# How similar images need to be to group as a burst (0-64)
# Lower = more strict, Higher = groups more aggressively
# 8 = very similar shots (recommended for fast action)
similarity_threshold = 8

[critique]
# Which Ollama model to use for AI critique feature
# This model MUST return valid JSON (tested with minicpm-v2.6)
default_model = openbmb/minicpm-v2.6:q4_K_M
